<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="6"
    tools:context="com.soulvia.ideacreate.activity.PyqActivity">
    <com.soulvia.ideacreate.layout.CircleRelativeLayout
        android:layout_width="140dp"
        android:layout_height="140dp"
        circle:background_color="#80e66d"
        android:layout_marginStart="10dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="5dp"
        android:layout_columnSpan="2"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="......"
            android:textColor="@color/black" />
    </com.soulvia.ideacreate.layout.CircleRelativeLayout>
    <com.soulvia.ideacreate.layout.CircleRelativeLayout
        circle:background_color="#3838e4"
        circle:background_alpha="100"
        android:layout_columnSpan="2"
        android:layout_marginTop="300dp"
        android:layout_width="120dp"
        android:layout_height="120dp">

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="......"
            android:textColor="@color/black" />
    </com.soulvia.ideacreate.layout.CircleRelativeLayout>

    <com.soulvia.ideacreate.layout.CircleRelativeLayout
        android:id="@+id/crlayout"
        circle:background_color="#54cea2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_columnSpan="2"
        android:layout_marginTop="200dp">

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="....."
            android:textColor="@color/black" />
    </com.soulvia.ideacreate.layout.CircleRelativeLayout>
    <com.soulvia.ideacreate.layout.CircleRelativeLayout
        circle:background_color="#54cea2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_columnSpan="2"
        android:layout_marginTop="00dp">

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="....."
            android:textColor="@color/black" />
    </com.soulvia.ideacreate.layout.CircleRelativeLayout>
    <com.soulvia.ideacreate.layout.CircleRelativeLayout
        circle:background_color="#80e66d"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="invisible"
        android:layout_columnSpan="2"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="....."
            android:textColor="@color/black" />
    </com.soulvia.ideacreate.layout.CircleRelativeLayout>
    <com.soulvia.ideacreate.layout.CircleRelativeLayout
        circle:background_color="#80e66d"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_columnSpan="2"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="....."
            android:textColor="@color/black" />
    </com.soulvia.ideacreate.layout.CircleRelativeLayout>
</GridLayout>